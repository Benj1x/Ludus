<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="indhold">
            <div class="logo">
                <img src="~/Views/Billeder/rybnerslogo.png" />
            </div>
            <nav class="navigations-op">
                <a>*Brugernavn*</a>
                <a href="Login.html">Log ud</a>
            </nav>
            <nav class="navigations-menu">
                @Html.ActionLink("Møder", "Skema", "Home")
                @Html.ActionLink("Elev Oversigt", "StudentList", "Home")
            </nav>
        </div>
